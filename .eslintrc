{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": ["chai-friendly"],
  "rules": {
    "indent" : [
      "warn",
      "tab",
      {"SwitchCase" : 1}
    ],
    "max-depth" : [
      "warn",
      5
    ],
    "no-useless-escape" : [
      "off"
    ],
    "no-extra-boolean-cast" : [
      "warn"
    ],
    "no-unused-vars" : [
      "warn", {
        "vars" : "all",
        "args" : "none",
        "ignoreRestSiblings" : false
      }
    ],
    "quotes" : [
      "off",
      "single"
    ],
    "semi" : [
      "error",
      "always"
    ],
    "valid-jsdoc" : ["warn", {
      "requireParamDescription" : false,
      "requireReturnDescription" : false,
      "requireReturn" : false
    }]
  }
}
