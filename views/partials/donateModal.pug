// Modal
#donationModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h3#exampleModalLabel.modal-title Donate now
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
            .modal-body
                article.card
                    .card-body.p-5
                        .userInfo
                            h4 User Information
                            p Email : #{user.email}
                            p Title : #{user.profile.title}
                            p First name : #{user.profile.firstName}
                            p Last name : #{user.profile.lastName}
                            p Country : #{user.profile.country}
                            p Province : #{user.profile.province}
                            p Address : #{user.profile.address}
                            p City : #{user.profile.city}
                            p Postal code : #{user.profile.postalCode}
                            p Phone : #{user.profile.phone}

                        ul.nav.bg-light.nav-pills.rounded.nav-fill.mb-3(role='tablist')
                            li.nav-item
                                a.nav-link(data-toggle='pill', href='#nav-tab-card')
                                    i.fa.fa-credit-card
                                    |  Credit Card
                            li.nav-item.active
                                a.nav-link(data-toggle='pill', href='#nav-tab-paypal')
                                    i.fab.fa-paypal
                                    |   Paypal

                        .tab-content
                            #nav-tab-card.tab-pane.fade.active
                                p
                                form(role='form')
                                    .form-group
                                        label(for='username') Full name (on the card)
                                        input.form-control(type='text', name='username', placeholder='', required='')
                                    // form-group.//
                                    .form-group
                                        label(for='cardNumber') Card number
                                        .input-group
                                            input.form-control(type='text', name='cardNumber', placeholder='')
                                            .input-group-append
                                                span.input-group-text.text-muted
                                                    i.fab.fa-cc-visa
                                                    i.fab.fa-cc-amex
                                                    i.fab.fa-cc-mastercard
                                    // form-group.//
                                    .row
                                        .col-sm-8
                                            .form-group
                                                label
                                                    span.hidden-xs Expiration
                                                .input-group
                                                    input.form-control(type='number', placeholder='MM', name='')
                                                    input.form-control(type='number', placeholder='YY', name='')
                                        .col-sm-4
                                            .form-group
                                                label(data-toggle='tooltip', title='', data-original-title='3 digits code on back side of the card')
                                                    | CVV
                                                    i.fa.fa-question-circle
                                                input.form-control(type='number', required='')
                                            // form-group.//
                                    // row.//
                            // tab-pane.//
                            #nav-tab-paypal.tab-pane.fade
                                p Paypal is easiest way to pay online
                                button.btn.btn-primary(type='button' style='display:block')
                                        i.fab.fa-paypal
                                        |  Log in my Paypal
                            // tab-pane.//
                        // tab-content .//
                    // card-body.//
            .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Confirm Donation

