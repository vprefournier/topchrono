    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5#exampleModalLabel.modal-title Modal title
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
            .modal-body
                article.card
                    .card-body.p-5
                        ul.nav.bg-light.nav-pills.rounded.nav-fill.mb-3(role='tablist')
                            li.nav-item
                                a.nav-link.active(data-toggle='pill', href='#nav-tab-card')
                                    i.fa.fa-credit-card
                                    |  Credit Card
                            li.nav-item
                                a.nav-link(data-toggle='pill', href='#nav-tab-paypal')
